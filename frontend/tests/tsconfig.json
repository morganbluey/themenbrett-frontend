{ // Konfiguration von TypeScript für die Tests, die mit ts-jest ausgeführt werden.
  "extends": "../tsconfig.node.json",
  "compilerOptions": {
    "rootDir": "..",
    "noEmit": true,
    /* Testing */
    "types": [
      "vitest/globals",
      "@testing-library/jest-dom"
    ],
    "jsx": "react-jsx",
    "lib": ["ES2023", "DOM"]
  },
  "include": [
    "../src/**/*",
    "./**/*"
  ]
}